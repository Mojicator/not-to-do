<div class="container-fluid">
  <div class="row">
    <div class="col home">
      <h2 class="sign-up">Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      
        <div class="form-group row">
          <%= f.label :first_name, class: 'col-sm-4 col-form-label' %>
          <div class="col-sm-8">
            <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
          </div>
        </div>
      
        <div class="form-group row">
          <%= f.label :last_name, class: 'col-sm-4 col-form-label' %>
          <div class="col-sm-8">
            <%= f.text_field :last_name, class: 'form-control' %>
          </div>
        </div>
      
        <div class="form-group row">
          <%= f.label :birth_date, class: 'col-sm-4 col-form-label' %>
          <div class="col-sm-8">
            <%= f.date_field :birth_date, class: 'form-control' %>
          </div>
        </div>
      
        <div class="form-group row">
          <%= f.label :email, class: 'col-sm-4 col-form-label' %>
          <div class="col-sm-8">
            <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
          </div>
        </div>
      
        <div class="form-group row">
          <%= f.label :password, class: 'col-sm-4 col-form-label' %>
          <div class="col-sm-8">
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "#{@minimum_password_length} characters minimum" %>
          </div>
        </div>
      
        <div class="form-group row">
          <%= f.label :password_confirmation,class: 'col-sm-4 col-form-label' %>
          <div class="col-sm-8">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          </div>
        </div>
      
        <div class="actions">
          <%= f.submit "Submit", class: 'btn' %>
        </div>
      <% end %>
      <hr>
      <div class="actions">
        <%= link_to 'Home', root_path, class: 'btn' %>
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>

